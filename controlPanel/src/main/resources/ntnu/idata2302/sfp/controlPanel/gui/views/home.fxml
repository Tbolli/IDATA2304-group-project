<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1024" prefWidth="1440" style="-fx-background-color: #D8F3DC;"
            stylesheets="@/ntnu/idata2302/sfp/controlPanel/gui/styles/app.css, @/ntnu/idata2302/sfp/controlPanel/gui/styles/home.css"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ntnu.idata2302.sfp.controlPanel.gui.controllers.HomeController">

    <!-- SIDEBAR -->
    <left>
        <VBox id="sidebar" alignment="TOP_CENTER" prefHeight="1024.0" prefWidth="200.0" spacing="30"
              style="-fx-background-color: #80ED99;">
            <ImageView fitHeight="203.0" fitWidth="200.0">
                <Image url="@/ntnu/idata2302/sfp/controlPanel/images/SMF_Logo.png"/>
            </ImageView>


            <Button id="sidebar-btn" fx:id="homeBtn" onAction="#openHome" prefHeight="65" prefWidth="150" text="Home"/>
            <Button id="sidebar-btn" fx:id="nodesBtn" onAction="#openNodes" prefHeight="65" prefWidth="150"
                    text="Nodes"/>
            <Button id="sidebar-btn" fx:id="logsBtn" onAction="#openDataLog" prefHeight="65" prefWidth="150"
                    text="Data Logs"/>
        </VBox>
    </left>

    <!-- MAIN CENTER AREA -->
    <center>
        <AnchorPane fx:id="homeContentPane" style="-fx-background-color: #F6F0F0;">

            <!-- Title -->
            <Label fx:id="pageTitle" style="-fx-font-size: 36px; -fx-font-weight: 700; -fx-text-fill: #2B4854;"
                   text="Smart Farming System" AnchorPane.leftAnchor="24.0" AnchorPane.topAnchor="24.0"/>

            <!-- Dashboard cards -->
            <VBox fx:id="mainCardsBox" alignment="TOP_CENTER" spacing="18" AnchorPane.bottomAnchor="24.0"
                  AnchorPane.leftAnchor="24.0" AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="100.0">

                <GridPane hgap="20" vgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>

                    <!-- Temperature card -->
                    <Pane prefHeight="300" prefWidth="520" styleClass="card" GridPane.columnIndex="0"
                          GridPane.rowIndex="0"><![CDATA[
                        ]]>
                        <VBox spacing="8" style="-fx-padding: 18;">
                            <Label style="-fx-font-size: 32px;" text="ðŸŒ¡"/>
                            <Label styleClass="card-title" text="Temperature"/>
                            <Label styleClass="card-value" text="21Â°C"/>
                            <Label styleClass="card-subvalue" text="69.8Â°F"/>
                            <ProgressBar prefWidth="220" progress="0.6" style="-fx-accent: #863434;"/>
                            <HBox spacing="8" style="-fx-padding: 8 0 0 0;">
                                <Button onAction="#viewDetails" styleClass="action-btn" text="View Details"/>
                            </HBox>
                        </VBox>
                    </Pane>

                    <!-- Humidity card -->
                    <Pane prefHeight="300" prefWidth="520" styleClass="card" GridPane.columnIndex="1"
                          GridPane.rowIndex="0"><![CDATA[
                        ]]>
                        <VBox spacing="8" style="-fx-padding: 18;">
                            <Label style="-fx-font-size: 32px;" text="ðŸ’§"/>
                            <Label styleClass="card-title" text="Humidity"/>
                            <Label styleClass="card-value" text="50%"/>
                            <ProgressBar prefWidth="220" progress="0.5" style="-fx-accent: #863434;"/>
                            <HBox spacing="8" style="-fx-padding: 8 0 0 0;">
                                <Button onAction="#openNode" styleClass="action-btn" text="Open Node"/>
                            </HBox>
                        </VBox>
                    </Pane>

                    <!-- Actuator card -->
                    <Pane prefHeight="300" prefWidth="520" styleClass="card" GridPane.columnIndex="0"
                          GridPane.rowIndex="1">
                        <VBox spacing="10" style="-fx-padding: 18;">
                            <Label styleClass="card-title" text="Actuator Status"/>
                            <HBox alignment="CENTER_LEFT" spacing="12">
                                <Label style="-fx-font-weight: 700;" text="Window:"/>
                                <Button fx:id="windowBtn" onAction="#toggleWindow" styleClass="action-btn" text="ON"/>
                            </HBox>
                            <HBox alignment="CENTER_LEFT" spacing="12">
                                <Label style="-fx-font-weight: 700;" text="Fan:"/>
                                <Button fx:id="fanBtn" onAction="#toggleFan" styleClass="action-btn" text="OFF"/>
                            </HBox>
                        </VBox>
                    </Pane>

                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                </GridPane>
            </VBox>
        </AnchorPane>
    </center>
</BorderPane>
