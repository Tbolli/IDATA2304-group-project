<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="900" prefWidth="1440"
            style="-fx-background-color: #D8F3DC;"
            stylesheets="@/ntnu/idata2302/sfp/controlPanel/gui/styles/datalog.css"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ntnu.idata2302.sfp.controlPanel.gui.controllers.DataLogController">

    <!-- SIDEBAR -->
    <left>
        <VBox id="sidebar" alignment="TOP_CENTER"
              prefWidth="200" spacing="25"
              style="-fx-background-color: #80ED99;">

            <ImageView fitWidth="120" fitHeight="140">
                <image>
                    <Image url="@/ntnu/idata2302/sfp/controlPanel/images/SMF_Logo.png"/>
                </image>
            </ImageView>

            <Button styleClass="sidebar-btn" text="Home" onAction="#openHome"/>
            <Button styleClass="sidebar-btn" text="Nodes" onAction="#openNodes"/>
            <Button styleClass="sidebar-btn-active" text="DataLog"/>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <AnchorPane id="contentArea">

            <!-- Page Title -->
            <Label fx:id="pageTitle"
                   text="Smart Farming System"
                   styleClass="page-title"
                   AnchorPane.leftAnchor="240"
                   AnchorPane.topAnchor="30"/>

            <!-- WHITE CARD BACKGROUND -->
            <StackPane styleClass="log-card"
                       AnchorPane.leftAnchor="240"
                       AnchorPane.rightAnchor="120"
                       AnchorPane.topAnchor="120"
                       AnchorPane.bottomAnchor="120">

                <VBox spacing="25" alignment="TOP_CENTER">

                    <!-- Section Title -->
                    <Label text="Data Log" styleClass="section-title"/>

                    <!-- Data Table -->
                    <TableView fx:id="logTable" styleClass="log-table" prefHeight="500">

                        <columns>
                            <TableColumn fx:id="colTime" text="Timestamp" prefWidth="150"/>
                            <TableColumn fx:id="colTemp" text="Temperature" prefWidth="150"/>
                            <TableColumn fx:id="colHum" text="Humidity" prefWidth="150"/>
                        </columns>

                    </TableView>

                </VBox>
            </StackPane>

        </AnchorPane>
    </center>

</BorderPane>
