<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="900" prefWidth="1440" style="-fx-background-color: #D8F3DC;" stylesheets="@/ntnu/idata2302/sfp/controlPanel/gui/styles/datalog.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.idata2302.sfp.controlPanel.gui.controllers.DataLogController">

    <!-- SIDEBAR -->
    <left>
        <VBox id="sidebar" alignment="TOP_CENTER" prefWidth="200" spacing="25" style="-fx-background-color: #80ED99;">

            <ImageView fitHeight="218.0" fitWidth="210.0">
                <Image url="@/ntnu/idata2302/sfp/controlPanel/images/SMF_Logo.png" />
            </ImageView>

            <Button onAction="#openHome" styleClass="sidebar-btn" text="Home" />
            <Button onAction="#openNodes" prefHeight="52.0" prefWidth="141.0" styleClass="sidebar-btn" text="Nodes" />
            <Button prefHeight="59.0" prefWidth="151.0" styleClass="sidebar-btn-active" text="DataLog" />
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <AnchorPane id="contentArea">

            <!-- Page Title -->
            <Label fx:id="pageTitle" styleClass="page-title" text="Smart Farming System" AnchorPane.leftAnchor="240" AnchorPane.topAnchor="30" />

            <!-- WHITE CARD BACKGROUND -->
            <StackPane styleClass="log-card" AnchorPane.bottomAnchor="120" AnchorPane.leftAnchor="240" AnchorPane.rightAnchor="120" AnchorPane.topAnchor="120">

                <VBox alignment="TOP_CENTER" spacing="25">

                    <!-- Section Title -->
                    <Label styleClass="section-title" text="Data Log" />

                    <!-- Data Table -->
                    <TableView fx:id="logTable" prefHeight="500" styleClass="log-table">

                        <columns>
                            <TableColumn fx:id="colTime" prefWidth="150" text="Timestamp" />
                            <TableColumn fx:id="colTemp" prefWidth="150" text="Temperature" />
                            <TableColumn fx:id="colHum" prefWidth="150" text="Humidity" />
                        </columns>

                    </TableView>

                </VBox>
            </StackPane>

        </AnchorPane>
    </center>

</BorderPane>
