<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="1024" prefWidth="1440" style="-fx-background-color: #D8F3DC;"
            xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ntnu.idata2302.sfp.controlPanel.gui.controllers.LoginController">

    <center>
        <StackPane style="-fx-background-color: #F6F0F0;">
            <VBox alignment="CENTER" spacing="18"
                  style="-fx-padding: 40; -fx-background-radius: 10; -fx-background-color: rgba(255,255,255,0.75);">

                <Label text="Server Login" style="-fx-font-size: 26px; -fx-font-weight: bold;" />

                <HBox alignment="CENTER" spacing="8">
                    <TextField fx:id="ip1" promptText="0" prefWidth="55" alignment="CENTER"/>
                    <Label text="." style="-fx-font-size: 22px;"/>
                    <TextField fx:id="ip2" promptText="0" prefWidth="55" alignment="CENTER"/>
                    <Label text="." style="-fx-font-size: 22px;"/>
                    <TextField fx:id="ip3" promptText="0" prefWidth="55" alignment="CENTER"/>
                    <Label text="." style="-fx-font-size: 22px;"/>
                    <TextField fx:id="ip4" promptText="0" prefWidth="55" alignment="CENTER"/>
                </HBox>

                <Button text="Use Localhost (127.0.0.1)" onAction="#setLocalHost" prefWidth="240"/>
                <Button text="Connect" onAction="#connectToServer" prefWidth="160"/>

                <!-- ERROR/INFO MESSAGE -->
                <Label fx:id="feedbackLabel" text=" " style="-fx-text-fill: red; -fx-font-size: 14px;"/>

            </VBox>
        </StackPane>
    </center>
</BorderPane>






